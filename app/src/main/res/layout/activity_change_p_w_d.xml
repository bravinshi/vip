<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.goldensky.vip.model.ChangePWDModel" />
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        tools:context=".activity.mine.settings.ChangePWDActivity">
        <com.goldensky.framework.ui.view.TopActionBar
            android:id="@+id/top_bar_change_pwd"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            app:centerText="@string/text_change_psd"
            app:showIvBack="true"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_send_code_change_pwd"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_change_pwd"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            >
            <TextView
                android:id="@+id/tv_prompt_change_pwd"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_888888"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="40dp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@+id/tv_prompt_change_pwd"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                >
                <EditText
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/btn_get_code_change_pwd"
                    android:layout_marginLeft="15dp"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/white"
                    android:textSize="14sp"
                    android:hint="@string/hint_input_verification_code"
                    android:layout_marginRight="100dp"
                    android:text="@={model.verificationCode}"
                    />
                <com.goldensky.vip.base.ui.view.CountDownButton
                    android:id="@+id/btn_get_code_change_pwd"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:textSize="16sp"
                    android:onClick="@{listener}"
                    android:textColor="@color/color_6E788C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hint_get_verification_code"
                    android:layout_marginRight="15dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:id="@+id/cl_confirm_pwd_change_pwd"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_change_pwd"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_new_pwd_change_pwd"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_height="50dp"
                >
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/text_new_pwd"
                    />
                <EditText
                    android:id="@+id/et_pwd_change_pwd"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintRight_toLeftOf="@+id/can_see_new_change_pwd"
                    android:layout_marginLeft="105dp"
                    android:layout_marginRight="15dp"
                    android:inputType="textPassword"
                    android:text="@={model.newPassword}"
                    android:hint="@string/hint_input_new_password"
                    android:textColorHint="@color/color_9"
                    android:textColor="@color/color_333333"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@+id/can_see_new_change_pwd"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="25dp"
                    android:onClick="@{listener}"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/bukejian"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@+id/cl_new_pwd_change_pwd"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                android:layout_height="50dp"
                >
                <TextView
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/color_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="@string/text_new_pwd_confirm"
                    />
                <EditText
                    android:id="@+id/et_confirm_pwd_change_pwd"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="1"
                    app:layout_constraintRight_toLeftOf="@+id/can_see_confirm_change_pwd"
                    android:layout_marginLeft="105dp"
                    android:layout_marginRight="15dp"
                    android:inputType="textPassword"
                    android:text="@={model.newPasswordConfirm}"
                    android:hint="@string/hint_input_new_password_confirm"
                    android:textColorHint="@color/color_9"
                    android:textColor="@color/color_333333"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@+id/can_see_confirm_change_pwd"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="25dp"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:onClick="@{listener}"
                    android:src="@mipmap/bukejian"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/confirm_commit_change_pwd"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_btn_red"
            android:textColor="@color/white"
            android:text="@string/text_confirm_submit"
            android:gravity="center"
            android:onClick="@{listener}"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/F2F2F2"
        android:layout_height="match_parent"
        tools:context=".activity.mine.focus.GoodsFocusActivity">
        <com.goldensky.framework.ui.view.TopActionBar
            android:id="@+id/top_bar_goods_focus"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:showIvBack="true"
            app:centerText="我的关注"
            />
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_goods_focus"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_goods_focus"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:tabTextColor="@color/color_3"
            android:background="@color/white"
            app:tabSelectedTextColor="@color/EA483F"
            app:tabIndicatorColor="@color/EA483F"
            app:tabIndicatorFullWidth="false"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_goods_focus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.goldensky.framework.ui.view.TopActionBar
                android:id="@+id/tab_bar"
                app:centerText="今日爆款"
                android:layout_width="match_parent"
                android:layout_height="44dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/color_f2f2f2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@mipmap/jrbk_img_duihuakuang"
                    android:layout_height="wrap_content"/>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_1"
                            app:layout_constraintEnd_toStartOf="@+id/iv_2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:src="@mipmap/jrbk_img_magguo"
                            android:layout_width="0dp"
                            android:onClick="@{listener}"
                            android:layout_height="259dp"/>

                        <ImageView
                            android:id="@+id/iv_2"
                            app:layout_constraintStart_toEndOf="@id/iv_1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:src="@mipmap/jrbk_img_jiu"
                            android:layout_width="0dp"
                            android:onClick="@{listener}"
                            android:layout_height="259dp"/>

                        <ImageView
                            android:id="@+id/iv_3"
                            app:layout_constraintEnd_toStartOf="@+id/iv_4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/iv_1"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/my_pic_yandan3"
                            android:layout_width="0dp"
                            android:onClick="@{listener}"
                            android:layout_height="259dp"/>

<!--                        <ImageView-->
<!--                            android:layout_marginTop="10dp"-->
<!--                            app:layout_constraintTop_toBottomOf="@+id/iv_1"-->
<!--                            app:layout_constraintStart_toEndOf="@+id/iv_3"-->
<!--                            app:layout_constraintEnd_toEndOf="parent"-->
<!--                            android:id="@+id/iv_4"-->
<!--                            android:onClick="@{listener}"-->
<!--                            android:src="@mipmap/jrbk_img_zhou"-->
<!--                            android:layout_width="0dp"-->
<!--                            android:layout_height="259dp"/>-->


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/btn_service"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/my_pic_xuanfu"
            android:layout_marginRight="20dp"
            android:scaleType="center"
            android:onClick="@{listener}"
            android:layout_marginBottom="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.mine.tools.MyToolsTestActivity">
        <com.goldensky.framework.ui.view.TopActionBar
            android:id="@+id/top_bar_my_tools"
            app:centerText="我的工具"
            app:showIvBack="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            app:centerTextColor="@color/color_333333"
            android:layout_height="wrap_content"
            app:centerTextSize="18"
            />
        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_my_tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:text="客户管理"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_service_manage_tools"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_my_tools"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/rv_service_manage_tools"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="商品管理"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_goods_manage_tools"
            app:layout_constraintTop_toBottomOf="@+id/rv_service_manage_tools"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/rv_goods_manage_tools"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="商城管理"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mall_manage_tools"
            app:layout_constraintTop_toBottomOf="@+id/rv_goods_manage_tools"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/rv_mall_manage_tools"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="账户管理"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_account_manage_tools"
            app:layout_constraintTop_toBottomOf="@+id/rv_mall_manage_tools"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/rv_account_manage_tools"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="其他"
            android:textStyle="bold"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_else_manage_tools"
            app:layout_constraintTop_toBottomOf="@+id/rv_account_manage_tools"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
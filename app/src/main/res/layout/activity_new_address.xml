<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f5"
        tools:context=".activity.mine.tools.adress.NewAddressActivity">
        <com.goldensky.framework.ui.view.TopActionBar
            android:id="@+id/top_bar_new_address"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="新建收货地址"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_consignee_new_address"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_new_address"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="55dp"
            >
            <TextView
                android:id="@+id/tv_consignee_new_address"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="收货人"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/et_consignee_new_address"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="@+id/tv_consignee_new_address"
                app:layout_constraintBottom_toBottomOf="@+id/tv_consignee_new_address"
                android:layout_width="match_parent"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="15dp"
                android:hint="请填写收货人姓名"
                android:layout_height="match_parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_phone_new_address"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_consignee_new_address"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="55dp"
            >
            <TextView
                android:id="@+id/tv_phone_new_address"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="手机号码"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/et_phone_new_address"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="@+id/tv_phone_new_address"
                app:layout_constraintBottom_toBottomOf="@+id/tv_phone_new_address"
                android:layout_width="match_parent"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="15dp"
                android:hint="请填写收货人手机号"
                android:layout_height="match_parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_region_new_address"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_phone_new_address"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="55dp"
            >
            <TextView
                android:id="@+id/tv_region_new_address"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="所在地区"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/et_region_new_address"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="@+id/tv_region_new_address"
                app:layout_constraintBottom_toBottomOf="@+id/tv_region_new_address"
                android:layout_width="match_parent"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="15dp"
                android:hint="省市县区、乡镇等"
                android:layout_height="match_parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_address_new_address"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_region_new_address"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="110dp"
            >
            <TextView
                android:id="@+id/tv_address_new_address"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="详细地址"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/et_address_new_address"
                android:background="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="17dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="15dp"
                android:hint="街道楼牌号等"
                android:gravity="top"
                android:layout_marginBottom="17dp"
                android:layout_height="match_parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_is_default_new_address"
            android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_address_new_address"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="72dp"
            >
            <TextView
                android:id="@+id/tv_is_default_new_address"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="17dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="设为默认地址"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                app:layout_constraintStart_toStartOf="@+id/tv_is_default_new_address"
                app:layout_constraintTop_toBottomOf="@+id/tv_is_default_new_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="每次下单会默认推荐使用该地址"
                android:textSize="12sp"
                android:textColor="@color/color_888888"
                />
            <Switch
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                android:theme="@style/AppRedTheme"
                android:layout_marginRight="15dp"
                android:outlineAmbientShadowColor="@color/EA483F"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:layout_width="315dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/shape_btn_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="保存"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="50dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
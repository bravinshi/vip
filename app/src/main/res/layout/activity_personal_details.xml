<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/color_f5"
        android:layout_height="match_parent"
        tools:context=".activity.mine.settings.PersonalDetailsActivity">
        <com.goldensky.framework.ui.view.TopActionBar
            android:id="@+id/top_bar_person_detail"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:centerText="个人信息"
        />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_head_person_detail"
            android:background="@color/white"
            android:onClick="@{listener}"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_person_detail"
            android:layout_marginTop="10dp"
            >
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textSize="15sp"
                android:textColor="@color/color_3"
                />
            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginRight="45dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/home_icon_touxiang"
                />

            <ImageView
                android:layout_marginTop="14dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_go_settings"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:onClick="@{listener}"
            android:id="@+id/cl_nick_person_detail"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="75dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_head_person_detail"
            android:layout_marginTop="1dp"
            >
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="15sp"
                android:textColor="@color/color_3"
                />
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="27dp"
                android:text="13963687986"
                android:textColor="@color/color_9"
                android:textSize="15sp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/v_status_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/colorTransparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="16dp"
                    android:layout_height="44dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_back_hui" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:layout_toRightOf="@+id/iv_back"
                    android:background="@drawable/shape_recommend_search_bg">

                    <ImageView
                        android:id="@+id/iv_search"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/my_pic_sousuo1" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/iv_search"
                        android:background="@color/colorTransparent"
                        android:gravity="center_vertical"
                        android:hint="尊上，您需要定制什么商品/服务"
                        android:paddingStart="5dp"
                        android:paddingEnd="15dp"
                        android:textSize="14sp" />

                </RelativeLayout>

            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="10dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_cs"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/my_pic_kefu1"
                            app:layout_constraintEnd_toStartOf="@+id/tv_cs_hint"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_cs_hint"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="15dp"
                            android:gravity="center_vertical"
                            android:text="尊上，还为您精心挑选了以下的商品和服务："
                            android:textColor="@color/color_888888"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toBottomOf="@+id/iv_cs"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_cs"
                            app:layout_constraintTop_toTopOf="@+id/iv_cs" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp">


                        <com.flyco.tablayout.CommonTabLayout
                            android:id="@+id/ctl"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/shape_corner_white_bg"
                            app:tl_iconVisible="false"
                            app:tl_indicator_corner_radius="1.5dp"
                            app:tl_indicator_height="3dp"
                            app:tl_indicator_width="24dp"
                            app:tl_indicator_color="@color/color_EA483F"
                            app:tl_indicator_anim_enable="false"
                            app:tl_textBold="SELECT"
                            app:tl_textSelectColor="@color/color_EA483F"
                            app:tl_textUnselectColor="@color/color_333333"
                            app:tl_textsize="16sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:layout_centerInParent="true"
                            android:background="@color/color_e" />

                    </RelativeLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_goods"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/iv_1"
                            app:layout_constraintEnd_toStartOf="@+id/iv_2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:src="@mipmap/my_pic_pingguo1"
                            android:layout_width="0dp"
                            android:layout_height="259dp"/>

                        <ImageView
                            android:id="@+id/iv_2"
                            app:layout_constraintStart_toEndOf="@id/iv_1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:src="@mipmap/my_pic_chengzi1"
                            android:layout_width="0dp"
                            android:layout_height="259dp"/>

                        <ImageView
                            android:id="@+id/iv_3"
                            app:layout_constraintEnd_toStartOf="@+id/iv_4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/iv_1"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/my_pic_fenliqi1"
                            android:layout_width="0dp"
                            android:layout_height="259dp"/>

                        <ImageView
                            android:layout_marginTop="10dp"
                            app:layout_constraintTop_toBottomOf="@+id/iv_1"
                            app:layout_constraintStart_toEndOf="@+id/iv_3"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:id="@+id/iv_4"
                            android:src="@mipmap/my_pic_zhazhibei1"
                            android:layout_width="0dp"
                            android:layout_height="259dp"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/ll_service"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:scaleType="fitXY"
                            android:src="@mipmap/my_pic_fuwutuijian1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/my_pic_fuwutuijian2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/my_pic_fuwutuijian3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:scaleType="fitXY"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/my_pic_fuwutuijian4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </LinearLayout>
        <ImageView
            android:id="@+id/btn_service"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@mipmap/my_pic_xuanfu"
            android:layout_marginRight="20dp"
            android:scaleType="center"
            android:onClick="@{listener}"
            android:layout_marginBottom="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
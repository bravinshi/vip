<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/color_EEEEEF"
        android:layout_height="match_parent"
        tools:context=".activity.mine.tools.ShareToFriendActivity">
        <com.goldensky.framework.ui.view.TopActionBar
            android:id="@+id/top_bar_share_to_friend"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:showIvBack="true"
            app:centerText="@string/text_share_to_friend"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@+id/top_bar_share_to_friend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="315dp"
            android:layout_height="375dp"
            android:background="@drawable/shape_corner_white_bg"
            android:layout_marginTop="40dp"
            >
            <ImageView
                android:id="@+id/iv_head_share_to_friend"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="60dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_height="60dp"
                android:src="@mipmap/home_icon_touxiang"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/btn_share_to_friend"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:onClick="@{listener}"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@mipmap/my_btn_fenxiang"
            />
        <View
            android:id="@+id/bottom_view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
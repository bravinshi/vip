<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.mine.vip.VipManageActivity">
        <ImageView
            android:id="@+id/head_vip_manage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/my_pic_vip_guanli1"
            />
        <View
            android:id="@+id/btn_back_vip_manage"
            app:layout_constraintTop_toTopOf="@+id/head_vip_manage"
            app:layout_constraintLeft_toLeftOf="@+id/head_vip_manage"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:onClick="@{listener}"
            android:layout_width="20dp"
            android:layout_height="30dp"
            />
        <View
            android:id="@+id/btn_share_vip_manage"
            app:layout_constraintTop_toTopOf="@+id/head_vip_manage"
            app:layout_constraintRight_toRightOf="@+id/head_vip_manage"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="70dp"
            android:onClick="@{listener}"
            android:layout_height="20dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_vip_manage"
            app:layout_constraintTop_toBottomOf="@+id/head_vip_manage"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="1"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
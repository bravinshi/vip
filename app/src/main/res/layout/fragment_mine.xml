<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/color_f5"
        android:layout_height="match_parent"
        tools:context=".activity.mine.settings.SettingsActivity">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:onClick="@{listener}"
                    android:id="@+id/cl_person_settings"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    >
                   <ImageView
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintLeft_toLeftOf="parent"
                       android:layout_marginLeft="15dp"
                       app:layout_constraintBottom_toBottomOf="parent"
                       android:id="@+id/iv_head_settings"
                       android:layout_width="60dp"
                       android:layout_height="60dp"
                       android:src="@mipmap/icon_head_mine"
                       />
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/iv_head_settings"
                        android:layout_marginTop="27dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_user_name_settings"
                        android:text="阿妹水果"
                        android:textSize="18sp"
                        android:textColor="@color/color_3"
                        />
                    <ImageView
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="20dp"
                        android:layout_height="44dp"
                        android:src="@drawable/icon_go_settings"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:onClick="@{listener}"
            android:id="@+id/cl_change_phone_settings"
            app:layout_constraintTop_toBottomOf="@+id/cl_person_settings"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            >

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户与安全"
                android:textSize="15sp"
                android:textColor="@color/color_3"
                />
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_go_settings"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:onClick="@{listener}"
            android:id="@+id/cl_change_password_settings"
            app:layout_constraintTop_toBottomOf="@+id/cl_change_phone_settings"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            >

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址"
                android:textSize="15sp"
                android:textColor="@color/color_3"
                />
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_go_settings"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:onClick="@{listener}"
            android:id="@+id/cl_permission_settings"
            app:layout_constraintTop_toBottomOf="@+id/cl_change_password_settings"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            >

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠券"
                android:textSize="15sp"
                android:textColor="@color/color_3"
                />
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_go_settings"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:onClick="@{listener}"
            android:id="@+id/cl_helper_settings"
            app:layout_constraintTop_toBottomOf="@+id/cl_permission_settings"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            >

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户服务"
                android:textSize="15sp"
                android:textColor="@color/color_3"
                />
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_go_settings"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:onClick="@{listener}"
            android:id="@+id/cl_feedback_settings"
            app:layout_constraintTop_toBottomOf="@+id/cl_helper_settings"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            >

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:textSize="15sp"
                android:textColor="@color/color_3"
                />
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_go_settings"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:onClick="@{listener}"
            android:id="@+id/cl_qx_settings"
            app:layout_constraintTop_toBottomOf="@+id/cl_feedback_settings"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            >

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="权限设置"
                android:textSize="15sp"
                android:textColor="@color/color_3"
                />
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_go_settings"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:onClick="@{listener}"
            android:id="@+id/cl_protocol_settings"
            app:layout_constraintTop_toBottomOf="@+id/cl_qx_settings"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            >

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平台协议"
                android:textSize="15sp"
                android:textColor="@color/color_3"
                />
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_go_settings"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_current_version_settings"
            android:onClick="@{listener}"
            app:layout_constraintTop_toBottomOf="@+id/cl_protocol_settings"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            >

            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前版本"
                android:textSize="15sp"
                android:textColor="@color/color_3"
                />
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginRight="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前版本2.0"
                android:textSize="12sp"
                android:textColor="@color/color_CCCCCC"
                />
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:src="@drawable/icon_go_settings"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/cl_current_version_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/shape_btn_blue"
            android:text="退出登录"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/color_4F7DF5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

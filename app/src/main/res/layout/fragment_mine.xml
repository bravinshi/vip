<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.goldensky.framework.ui.view.TopActionBar
            android:id="@+id/top_bar_main"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:centerText="我的"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:background="@drawable/shape_back_mine"
            android:layout_height="175dp">
            <ImageView
                android:id="@+id/iv_head_mine"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/home_icon_touxiang"
                android:layout_width="55dp"
                android:layout_height="55dp"
                />
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/iv_head_mine"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="85dp"
                android:text="18888888888"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_order_mine"
            android:background="@drawable/shape_cornerback_white"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_main"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="95dp"
            android:layout_marginTop="135dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            >
        </androidx.recyclerview.widget.RecyclerView>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/top_bar_main"
            android:background="@drawable/shape_cornerback_white"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="165dp">
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的工具"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tool_mine"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="95dp"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

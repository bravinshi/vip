<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_layout"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".fragment.main.ShoppingCartFragment">
        <com.goldensky.framework.ui.view.TopActionBar
            android:id="@+id/top_bar_shopping_cart"
            android:background="@color/white"
            android:layout_width="match_parent"
            app:showIvBack="false"
            app:centerTextSize="18"
            app:rightText="编辑"
            app:rightTextSize="14"
            android:layout_height="wrap_content"
            app:centerText="购物车"
            />
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/smart_shopping_cart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <com.scwang.smartrefresh.layout.header.ClassicsHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:id="@+id/ll_shopping_cart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_shopping_cart"
                                android:paddingTop="10dp"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/shape_list_shopping_cart"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </LinearLayout>

                        <View
                            android:background="@color/color_shadow"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:background="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            >
                            <CheckBox
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:id="@+id/checkbox_select_all"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="全选"
                                android:onClick="@{listener}"
                                android:gravity="center"
                                android:button="@drawable/selector_checkbox_shopping_cart"
                                android:theme="@style/AppRedTheme"
                                android:layout_marginLeft="20dp"
                                android:textSize="16sp"
                                />
                            <TextView
                                android:id="@+id/tv_sum"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toLeftOf="@id/tv_close_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="合计：¥189.00"
                                android:textSize="14sp"
                                android:layout_marginTop="17dp"
                                android:layout_marginRight="10dp"
                                android:textColor="@color/color_9"
                                />

                            <TextView
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                android:id="@+id/tv_close_account"
                                android:layout_width="100dp"
                                android:gravity="center"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:layout_marginTop="8dp"
                                android:onClick="@{listener}"
                                android:textStyle="bold"
                                android:background="@drawable/shape_btn_red"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:text="@string/text_go_close_account"
                                android:layout_centerVertical="true"
                                android:layout_height="40dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                    <include layout="@layout/include_empty_shopping_cart" android:id="@+id/include_shopping_cart"/>
                </RelativeLayout>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>
</layout>
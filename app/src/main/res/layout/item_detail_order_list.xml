<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/iv_item_detail_orderlist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@color/color_CCCCCC"
            android:layout_width="108dp"
            android:layout_height="108dp" />
        <TextView
            app:layout_constraintLeft_toRightOf="@+id/iv_item_detail_orderlist"
            android:id="@+id/name_item_detail_orderlist"
            app:layout_constraintTop_toTopOf="@+id/iv_item_detail_orderlist"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="可口松软饼干100g*2袋高钙饼干无添加"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/size_item_detail_orderlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/name_item_detail_orderlist"
            app:layout_constraintTop_toBottomOf="@+id/name_item_detail_orderlist"
            android:layout_marginTop="5dp"
            android:text="100g*2"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            />
        <TextView
            android:id="@+id/money_item_detail_orderlist"
            app:layout_constraintStart_toStartOf="@+id/name_item_detail_orderlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥15.89"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_detail_orderlist"
            />
        <TextView
            android:id="@+id/count_item_detail_orderlist"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共1件"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_666666"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
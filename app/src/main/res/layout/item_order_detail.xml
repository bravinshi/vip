<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="bean"
            type="com.goldensky.vip.bean.OrderDetailBean.OrderDetailListDTO" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/iv_item_order_detail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@color/color_CCCCCC"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <TextView
            app:layout_constraintStart_toEndOf="@+id/iv_item_order_detail"
            android:id="@+id/name_item_order_detail"
            app:layout_constraintTop_toTopOf="@+id/iv_item_order_detail"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintEnd_toStartOf="@+id/money_item_order_detail"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:layout_marginRight="15dp"
            android:text="@{bean.commodityname}"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/size_item_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/name_item_order_detail"
            app:layout_constraintTop_toBottomOf="@+id/name_item_order_detail"
            android:layout_marginTop="5dp"
            android:text="@{bean.inventory}"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            />
        <TextView
            android:id="@+id/money_item_order_detail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{bean.commodityoldprice}"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/count_item_order_detail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/money_item_order_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{bean.purchasenum}"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_666666"
            />
        <TextView
            android:id="@+id/go_evaluated_item_order_detail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_btn_red"
            android:layout_width="75dp"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="15dp"
            android:text="@string/text_go_evaluated"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
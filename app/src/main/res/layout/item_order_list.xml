<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_corner_white_bg"
        android:layout_marginRight="10dp"
        android:layout_height="220dp">

        <TextView
            android:id="@+id/number_item_orderlist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="15dp"
            android:text="订单编号：1326984686868"
            android:textSize="16sp"
            android:textColor="@color/color_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/statu_item_orderlist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:text="已发货"
            android:textSize="16sp"
            android:textColor="@color/EA483F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_item_order_list"
            app:layout_constraintTop_toBottomOf="@+id/number_item_orderlist"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@color/color_CCCCCC"
            android:layout_width="108dp"
            android:layout_height="108dp" />
        <TextView
            app:layout_constraintLeft_toRightOf="@+id/iv_item_order_list"
            android:id="@+id/name_item_order_list"
            app:layout_constraintTop_toTopOf="@+id/iv_item_order_list"
            app:layout_constraintRight_toRightOf="@+id/statu_item_orderlist"
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:text="可口松软饼干100g*2袋高钙饼干无添加"
            android:textColor="@color/color_333333"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/size_item_orderlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/name_item_order_list"
            app:layout_constraintTop_toBottomOf="@+id/name_item_order_list"
            android:text="100g*2"
            android:textSize="12sp"
            android:textColor="@color/color_999999"
            />
        <TextView
            app:layout_constraintStart_toStartOf="@+id/name_item_order_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥15.89"
            android:textColor="@color/color_333333"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_order_list"
            />
        <TextView
            android:id="@+id/count_item_orderlist"
            app:layout_constraintRight_toRightOf="@+id/statu_item_orderlist"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_order_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共1件"
            android:textSize="14sp"
            android:textColor="@color/color_666666"
            />
        <TextView
            android:id="@+id/confirm_receipt_item_orderlist"
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_btn_red"
            android:text="@string/text_confirm_receipt"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/statu_item_orderlist"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_btn_gray"
            android:text="@string/text_check_logistics"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toStartOf="@+id/confirm_receipt_item_orderlist"
            android:layout_marginRight="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_corner_white_bg"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/number_item_orderlist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="15dp"
            android:text="订单编号：1326984686868"
            android:textSize="16sp"
            android:textColor="@color/color_333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/statu_item_orderlist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:text="已发货"
            android:textSize="16sp"
            android:textColor="@color/EA483F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_item_orderlist"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_goneMarginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:id="@+id/ll_sum_orderlist"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_item_orderlist"
            app:layout_constraintBottom_toTopOf="@+id/btn_red_item_orderlist"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_goneMarginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/count_item_orderlist"
                android:text="共5件"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计:"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/sum_money_item_orderlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="￥17864.00"
                android:textSize="20sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/btn_red_item_orderlist"
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_btn_red"
            android:text="@string/text_confirm_receipt"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/statu_item_orderlist"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/btn_gray_item_orderlist"
            android:layout_width="72dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_btn_gray"
            android:text="@string/text_cancel_order"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:textSize="12sp"
            app:layout_goneMarginRight="10dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_red_item_orderlist"
            android:layout_marginRight="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<resources>
    <declare-styleable name="TopActionBar">
        <attr name="centerText" format="string"/>
        <attr name="rightText" format="string"/>
        <attr name="leftText" format="string"/>
        <attr name="showIvBack" format="boolean"/>
        <attr name="centerTextSize" format="integer"/>
        <attr name="rightTextSize" format="integer"/>
        <attr name="leftTextSize" format="integer"/>
        <attr name="rightTextColor" format="color|reference"/>
        <attr name="centerTextColor" format="color|reference"/>
        <attr name="leftTextColor" format="color|reference"/>
    </declare-styleable>

    <style name="hand_popupwindow_anim_style">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/hand_show_from_bottom</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/hand_hide_to_bottom</item>
    </style>

    <declare-styleable name="MeasureFixedLayout">
        <attr name="measureFixed_half_height" format="boolean"/>
    </declare-styleable>

    <style name="dialog_update" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>